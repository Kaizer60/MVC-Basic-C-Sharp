@model IEnumerable<BasicASPTutorial.Models.Student>;
@{
    ViewData["Title"] = "หน้าแรก";
}

<h1 class="text-center">คะแนนสอบวิชาคอมพิวเตอร์</h1>

@if(Model.Count()>0)
{
    <table class="table">
        <thead class="table-primary">
            <tr>
                <th scope="col">ลำดับที่</th>
                <th scope="col">ชื่อ-สกุล</th>
                <th scope="col">คะแนน</th>
                <th scope="col">แก้ไข</th>
                <th scope="col">ลบ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Student"
                           asp-action="Edit"
                           asp-route-id="@student.Id">
                            แก้ไข
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           asp-controller="Student"
                           asp-action="Delete"
                           asp-route-id="@student.Id"
                           onclick="return confirm('ต้องการลบข้อมูลของ @student.Name หรือไม่?')">
                            ลบ
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-dark" role="alert">
        ไม่พบข้อมูลนักเรียน
    </div>
}